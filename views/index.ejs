    /* style.css — Global styles for Solaready demo
   - Uses CSS variables for color theme (solar-inspired)
   - Responsive layout using grid/flexbox
*/

/* ===== Theme ===== */
:root{
  --bg: #f7f9fc;
  --card: #ffffff;
  --text: #0f1724;
  --muted: #52606d;
  --accent-yellow: #FFB02E;
  --accent-orange: #FF7A18;
  --accent-blue: #0F3460;
  --glass: rgba(255,255,255,0.6);
  --radius: 12px;
  --shadow: 0 6px 18px rgba(16,24,40,0.08);
  --container-width: 1100px;
  font-family: "Inter", system-ui, -apple-system, "Segoe UI", Roboto, "Helvetica Neue", Arial;
}

/* ===== Reset / Base ===== */
*{box-sizing:border-box}
html,body{height:100%}
body{
  margin:0;
  background: linear-gradient(180deg, #ffffff 0%, #fbfbfd 30%, var(--bg) 100%);
  color:var(--text);
  -webkit-font-smoothing:antialiased;
  -moz-osx-font-smoothing:grayscale;
  line-height:1.45;
  font-size:16px;
}

/* ===== Layout helper ===== */
.container{
  width:100%;
  max-width:var(--container-width);
  margin:0 auto;
  padding:1.5rem;
}

/* ===== Header ===== */
.site-header{
  position:sticky;
  top:0;
  z-index:50;
  backdrop-filter: blur(6px);
  background: linear-gradient(180deg, rgba(255,255,255,0.7), rgba(255,255,255,0.55));
  border-bottom: 1px solid rgba(15,20,36,0.06);
}
.header-inner{
  display:flex;
  align-items:center;
  justify-content:space-between;
  gap:1rem;
}

/* brand */
.brand{
  display:flex;
  align-items:center;
  gap:.6rem;
  text-decoration:none;
  color:var(--text);
}
.logo-circle{
  width:40px;
  height:40px;
  border-radius:10px;
  display:flex;
  align-items:center;
  justify-content:center;
  background: linear-gradient(135deg,var(--accent-yellow),var(--accent-orange));
  font-size:18px;
  color:white;
  box-shadow:var(--shadow);
}
.brand-text{font-weight:700; font-size:1.05rem}

/* nav */
.main-nav ul{
  list-style:none;
  margin:0;
  padding:0;
  display:flex;
  gap:1rem;
  align-items:center;
}
.main-nav a{
  text-decoration:none;
  color:var(--muted);
  padding:.45rem .75rem;
  border-radius:8px;
  transition:all .18s ease;
  font-weight:500;
}
.main-nav a:hover{color:var(--accent-blue); background:rgba(15,52,96,0.04)}

/* special button link */
.btn-link{
  background: linear-gradient(90deg,var(--accent-yellow),var(--accent-orange));
  color:#08122a;
  font-weight:700;
  padding:.45rem .9rem;
  box-shadow: 0 6px 18px rgba(255,149,51,0.15);
}

/* hamburger (mobile) */
.hamburger{
  display:none;
  background:transparent;
  border:0;
  padding:.4rem;
}
.hamburger .hamburger-line{
  display:block;
  width:22px;
  height:2px;
  background:var(--text);
  margin:4px 0;
  border-radius:2px;
}

/* ===== Hero ===== */
.hero{
  padding:3.25rem 0;
}
.hero-grid{
  display:grid;
  grid-template-columns:1fr 420px;
  gap:2rem;
  align-items:center;
}
.hero-content h1{
  font-size:2.05rem;
  margin:0 0 .6rem;
}
.lead{color:var(--muted); margin-bottom:1rem}
.hero-ctas{display:flex; gap:.8rem; margin-bottom:1rem;}
.btn{
  display:inline-block;
  text-decoration:none;
  padding:.7rem 1.1rem;
  border-radius:12px;
  font-weight:600;
  transition:transform .12s ease, box-shadow .12s ease;
  cursor:pointer;
}
.btn.primary{
  background: linear-gradient(90deg,var(--accent-yellow),var(--accent-orange));
  color:#08122a;
  box-shadow: 0 10px 30px rgba(255,120,40,0.12);
}
.btn.ghost{
  background:transparent;
  border:1px solid rgba(15,20,36,0.06);
  color:var(--accent-blue);
}
.btn.large{padding:1rem 1.6rem; font-size:1.05rem}

/* hero stats */
.stats{display:flex; gap:1.25rem; margin-top:1rem; list-style:none; padding:0}
.stats li{color:var(--muted); font-size:.95rem}

/* hero card preview */
.hero-card .card-preview{
  background:linear-gradient(180deg, #ffffff, #fcf7f0);
  border-radius:14px;
  padding:1rem;
  box-shadow: var(--shadow);
  border:1px solid rgba(15,20,36,0.03);
}
.card-header{display:flex; gap:6px; align-items:center; padding-bottom:.6rem}
.card-body h3{margin:.2rem 0 .4rem}
.card-actions{display:flex; gap:.5rem}
.pill{padding:.45rem .65rem; border-radius:999px; border:0; font-weight:600}
.pill.outline{background:transparent; border:1px solid rgba(15,20,36,0.06)}

/* ===== About & Features ===== */
.about{padding:2.5rem 0}
.about-inner{display:flex; gap:2rem; align-items:flex-start}
.about-text{flex:1; min-width:240px}
.about-features{display:grid; grid-template-columns:repeat(1,1fr); gap:1rem; width:400px}
.feature{background:var(--card); border-radius:12px; padding:1rem; box-shadow:var(--shadow); display:flex; gap:1rem; align-items:center}
.feature h4{margin:.2rem 0 0}

/* ===== Services ===== */
.services{padding:2rem 0}
.services-grid{display:grid; grid-template-columns:repeat(2,1fr); gap:1rem}
.service-card{background:var(--card); padding:1rem; border-radius:12px; box-shadow:var(--shadow)}

/* ===== CTA ===== */
.cta{padding:2rem 0}
.cta-inner{background:linear-gradient(90deg, rgba(255,176,46,0.08), rgba(255,122,24,0.06)); padding:1.2rem; border-radius:12px; display:flex; align-items:center; justify-content:space-between; gap:1rem}

/* ===== Footer ===== */
.site-footer{padding:2rem 0 3rem; margin-top:2rem; border-top:1px solid rgba(15,20,36,0.05); background:transparent}
.footer-grid{display:grid; grid-template-columns:1fr 150px 160px; gap:1.5rem}
.footer-col h4{margin-bottom:.5rem}
.copy{padding-top:1rem; border-top:1px solid rgba(15,20,36,0.03); margin-top:1rem}

/* chat floating button */
.chat-fab{
  position:fixed;
  right:20px;
  bottom:20px;
  width:56px;
  height:56px;
  border-radius:999px;
  display:flex;
  justify-content:center;
  align-items:center;
  background:linear-gradient(135deg,var(--accent-orange),var(--accent-yellow));
  color:#08122a;
  box-shadow:0 12px 30px rgba(255,120,40,0.18);
  text-decoration:none;
  z-index:60;
}

/* ===== Responsive adjustments ===== */
@media (max-width:980px){
  .hero-grid{grid-template-columns:1fr; text-align:left}
  .hero-card{order:2}
  .about-inner{flex-direction:column}
  .services-grid{grid-template-columns:1fr}
  .footer-grid{grid-template-columns:1fr}
}

@media (max-width:720px){
  .main-nav{display:none}
  .hamburger{display:block}
  .header-inner{padding: .6rem 0}
  .container{padding:1rem}
  .main-nav.open{display:block; position:absolute; right:1rem; top:64px; background:var(--card); border-radius:12px; padding:0.75rem; box-shadow:var(--shadow)}
  .main-nav ul{flex-direction:column; gap:.4rem}
  .about-features{width:100%}
}

/* small helpers */
.text-muted{color:var(--muted)}
.center{text-align:center}

  </style>
